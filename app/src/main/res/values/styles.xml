<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BlueButtonCircular" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/blue_button_circular</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="RedButtonCircular" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/red_button_circular</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="GreenButtonCircular" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/green_button_circular</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="TextButtonRectangular" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/blue_button_rectangular</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="BlueButtonRectangular" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/blue_button_rectangular</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="RedButtonRectangular" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/red_button_rectangular</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="GreenButtonRectangular" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/green_button_rectangular</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="LightBlueButtonPill" parent="android:style/Widget.Holo.Button">
        <item name="android:background">@drawable/light_blue_button_pill</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="OptionsButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/options_button</item>
        <item name="android:textColor">@drawable/options_button_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.7</item>
    </style>

</resources>
